{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>{{ character.name }}</h2>
        <hr>
        {% if character.rank %}
        <h4>{{ character.rank }} of {{ character.affiliation }}</h4>
        {% else %}
        <h4>Member of {{ character.affiliation }}</h4>
        {% endif %}
        {% if character.reward > 0 %}
        <h6>Wanted for à¸¿: {{ character.reward }}</h6>
    {% endif %}
    {% if character.devilFruit %}
        <p>Devil Fruit User</p> 
    {% else %}
    {%endif%}
    {% if character.alive%}
    <p>Status: Alive</p>
    {% else %}
    <p>Status: Dead</p>
    {%endif%}
    <hr>
    {% if character.owner == userId %}
    <div class="btn-group">
        <a href="/characters/edit/{{ character.id }}" class="btn btn-primary me-2">Edit {{ character.name }}</a>
        <form action="/characters/{{ character.id }}?_method=DELETE" method="POST">
        <input type="submit" class="btn btn-danger" value="Delete {{ character.name }}">
        </form>
    </div>
    {% endif %}
    <hr>
    </article>
    <h4>comments</h4>
    <hr>
    {% if character.comments.length > 0 %}
    <div class="container-sm justify-content-center">
        {% for comm in character.comments %}
            {% render '../comment.liquid', comm: comm, userId: userId, character: character %}
        {% endfor %}
    </div>
    {% else %}
    <small>No comments yet...</small>
    {% endif %}
    {% if character.owner %}
    <small>character made by: {{ character.owner }} </small>
    {%endif%}
</div>
{% endblock  %}